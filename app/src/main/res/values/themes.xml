<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Abana" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:fontFamily">@font/comforta</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:transition">@anim/zoomin</item>


        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>
    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@drawable/popup_background</item>
        <item name="android:windowEnterAnimation">@anim/translate_down_side</item>
        <item name="android:windowExitAnimation">@anim/translate_right_left</item>
    </style>

    <style name="Theme.Abana" parent="Base.Theme.Abana" />
</resources>